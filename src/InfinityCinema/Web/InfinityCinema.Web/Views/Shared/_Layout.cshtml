@using InfinityCinema.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(this.ViewData["Title"].ToString() == String.Empty ? String.Empty : $"{this.ViewData["Title"]} - ") Infinity Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/virtual-select.min.css" asp-append-version="true" />
</head>
<body>
    <!--Header (Navbar)-->
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand mb-0 h1">
                <img class="d-inline-block align-top" src="https://cdn-icons-png.flaticon.com/512/4987/4987504.png" width=30 height=30></img>
            </a>
            <button type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    class="navbar-toggler"
                    aria-controls="navbarNav"
                    aria-explained="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="border:0px"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a asp-controller="Movies" asp-action="Create" class="nav-link">
                            <!--<a href="#" class="nav-link active">-->
                            Create Movie
                        </a>
                    </li>
                   @* <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle"
                           id="navbarDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Programs
                        </a>
                        <ul class="dropdown-menu"
                            aria-labelladby="navbarDropdown">
                            <li>
                                <a asp-controller="Movies" asp-action="Create" class="dropdown-item"> Create </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item active">
                        <a asp-controller="" asp-action="" class="nav-link">
                            Calorie Calculator
                        </a>
                    </li>*@
                </ul>
            </div>
            <form class=" d-flex form-inline my-2 my-lg-0">
                <input type="search" class="form-control me-2" placeholder="Search" aria-label="Search">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
        <partial name="_LoginPartial" />
    </nav>
    <!--Header (Navbar)-->
    <div class="mb-5"></div>

    <div>
        <main>
            <partial name="_CookieConsentPartial" />
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/js/virtual-select.min.js" asp-append-version="true"></script>

    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
